  <div class="workout-instructions">

    <%= @workout_details.gsub(/(\b(Name|Type|Muscle|Equipment|Difficulty|Instructions|Tip)\b):/, '<strong>\1</strong>:') %>


  </div>

  <br>
  <div>
    <form action="/random_workouts">
      <button class="button-5" role="button">
        <i  class="fas fa-random" style="color:rgb(171, 176, 191);"></i>New random workout!
      </button>
    </form>
  </div>
  <br>
  <div>
    <form action="/">
      <button class ="button-53" role="button">
        Home
      </button>
    </form>
  </div>
</div>
